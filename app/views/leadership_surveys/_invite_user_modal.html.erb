<!-- Modal -->
<div class="modal fade" id="invite_user<%= survey %>" tabindex="-1" role="dialog" aria-labelledby="invite_user<%= survey%>Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="invite_user<%= survey%>Label">Send Invite</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% resource = User.new%>
      <% resource_name = :user%>
      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post,class: "form-horizontal" }) do |f| %>
        <div class="modal-body">
          <div class="form-group row align-items-center">
            <%= f.label :email,class: "control-label col-sm-2" %>
            <div class="col-sm-10">
              <%= f.text_field :email,class: "form-control" %>
            </div>
          </div>
          <%= f.hidden_field :test_id,value: survey %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit "Send Invite",class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>