<div class="container-fluid container-top">
	<div class="container container-signup container-sign">
		<div class="modal-login-body">
			<h3 class="text-center">Update Profile</h3>
			<hr/>
			<%= form_for(current_user) do |f| %>
				<div class="avatar-upload">
					<div class="avatar-edit">
						<%= f.file_field :profile_pic,id: "imageUpload", accept:"image/*" %>
						<label for="imageUpload"></label>
					</div>
					<div class="avatar-preview">
						<div id="imagePreview" style="background-image: url(<%= current_user.profile_pic %>);">
						</div>
					</div>
				</div>
				<div class="h6 lh-25 alert alert-warning"><strong>Privacy disclaimer:</strong> The data about age, gender, country, highest education and industry are for research purposes.</div>
				<div class="row">
					<div class="col-md-6 mt-3">
						<label for="user_name" class="mb-1 font-weight-bold">Name</label>
						<%= f.text_field :name, autofocus: true, required: true, placeholder: 'Enter Your Name', class: 'form-control login-form' %>
					</div>
					<div class="col-md-6 mt-3">
						<label for="user_surname" class="mb-1 font-weight-bold">Surname</label>
						<%= f.text_field :surname, required: true, placeholder: 'Enter Your Surname', class: 'form-control login-form' %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mt-3">
						<label for="user_age" class="mb-1 font-weight-bold">Age</label>
						<%= f.number_field :age, step: 0, required: true, placeholder: 'Enter Your Age', class: 'form-control login-form' %>
					</div>
					<div class="col-md-6 mt-3">
						<label for="user_gender" class="mb-1 font-weight-bold">Gender</label>
						<%= f.select :gender, options_for_select([["Male", "Male"], ["Female", "Female"], ["Other", "Other"]], selected: current_user.gender), {include_blank: "Select Gender"}, { class: "form-control login-form", required: true } %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mt-3">
						<label for="user_country" class="mb-1 font-weight-bold">Country</label>
						<%= f.text_field :country, required: true, placeholder: 'Enter Your Country', class: 'form-control login-form' %>
					</div>
					<div class="col-md-6 mt-3">
						<label for="user_highest_education" class="mb-1 font-weight-bold">Last Education</label>
						<%= f.text_field :highest_education, required: true, placeholder: 'Enter Your Last Education', class: 'form-control login-form' %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mt-3">
						<label for="user_phone_number" class="mb-1 font-weight-bold">Phone Number</label>
						<%= f.number_field :phone_number, placeholder: 'Enter Your Phone Number', class: 'form-control login-form', required: true %>
					</div>
					<div class="col-md-6 mt-3">
						<label for="user_industry" class="mb-1 font-weight-bold">Industry</label>
						<%= f.select :industry ,options_for_select([["Aerospace", "Aerospace"], ["Agriculture", "Agriculture"], ["Pharmaceuticals", "Pharmaceuticals"], ["Software", "Software"], ["Construction", "Construction"], ["Education", "Education"]], selected: current_user.industry), {include_blank: "Select Industry"}, { class: "form-control login-form", required: true } %>
					</div>
				</div>
				<div class="col-md-6 px-0 mx-auto actions mt-4">
					<%= f.submit "Update", class: 'btn btn-primary btn-block mb-3' %>
				</div>
			<% end %>
		</div>
	</div>
</div>