<div class="container-fluid container-admin">
  <div class="container">
    <div class="row mb-4 align-items-center">
      <div class="col-md-6 text-center text-md-left">
        <h5 class="mb-3 mb-md-0">Dimensions</h5>
      </div>
      <div class="col-md-6 text-center text-md-right">
        <%= link_to 'New Dimension', new_dimension_path, class:"btn btn-primary" %>
      </div>
    </div>
    <div class="table-responsive table-users">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Questionnaire</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @dimensions.each do |dimension| %>
          <tr>
            <td><%= dimension.name %></td>
            <td><%= dimension.questionnaire.name %></td>
            <td class="action-links"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, dimension %></td>
            <td class="action-links"><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_dimension_path(dimension) %></td>
            <td class="action-links"><%= link_to '<i class="fas fa-trash-alt text-danger"></i>'.html_safe, dimension, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>