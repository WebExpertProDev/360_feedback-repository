<div class="container-fluid container-top">
  <div class="container container-signin container-sign">
    <div class="modal-login-body">
      <h3 class="text-center">Change your password</h3>
      <hr/>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off",required: true, placeholder: 'Enter New Password', class: 'form-control login-form', required: true, minlength: 6 %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off",required: true, placeholder: 'Enter New Password Again', class: 'form-control login-form', required: true, minlength: 6 %>
      </div>
      
      <div class="actions mt-3">
        <%= f.submit "Change my password", class: 'btn btn-primary btn-lg btn-block mb-3 btn-submit' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
