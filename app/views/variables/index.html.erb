<div class="container container-admin">
  <div class="container">
    <div class="row mb-4 align-items-center">
      <div class="col-md-6 text-center text-md-left">
        <h5 class="mb-3 mb-md-0">Variables</h5>
      </div>
      <div class="col-md-6 text-center text-md-right">
        <%= link_to 'New Variable', new_variable_path, class:"btn btn-primary" %>
      </div>
    </div>
  <div class="table-responsive table-users">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Value</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @variables.each do |variable| %>
        <tr>
          <td><%= variable.name %></td>
          <td><%= variable.description %></td>
          <td><%= variable.value %></td>
          <td class="action-links text-center"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, edit_variable_path(variable) %></td>
          <td class="action-links text-center"><%= link_to '<i class="fas fa-edit"></i>'.html_safe, variable %></td>
          <td class="action-links text-center"><%= link_to '<i class="fas fa-trash-alt text-danger"></i>'.html_safe, variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>