<div class="container-fluid container-admin">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="card card-admin">
          <div class="card-body">
            <h3 class="text-primary mb-4 text-center"> Dashboard </h3>
            <div class="row">
              <div class="col-12">
                <a class="dashboard-side-link active" href="<%= admin_users_path %>"><i class="fas fa-users"></i><span>Users</span></a>
                <a class="dashboard-side-link" href="<%= questionnaires_path %>"><i class="far fa-question-circle"></i><span>Questionnaires</span></a>
                <a class="dashboard-side-link" href="<%= dimensions_path %>"><i class="fas fa-arrows-alt"></i><span>Dimensions</span></a>
                <a class="dashboard-side-link" href="<%= questions_path %>"><i class="fas fa-question-circle"></i><span>Questions</span></a>
                <a class="dashboard-side-link" href="<%= variables_path %>"><i class="fas fa-list"></i><span>Variables</span></a>
                <!--<a class="dashboard-side-link" data-remote="true" href="<%= admin_edit_intro_path %>"><i class="fas fa-list"></i><span>Introductory Paragraph</span></a>-->
                <a class="dashboard-side-link" href="<%= destroy_user_session_path %>" data-method="delete"><i class="fas fa-sign-out-alt"></i><span>Log Out</span></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-9 mt-4 mt-lg-0">
        <h5 class="mb-4">Statistics</h5>
        <div class="row card-stats">
          <div class="col-md-4 col-sm-6">
            <%= link_to admin_users_path do %>
              <div class="card text-center">
                <h4>TOTAL USERS</h4>
                <h2><%= @users.size %></h2>
              </div>
            <% end %>
          </div>
          <div class="col-md-4 col-sm-6">
            <%= link_to questionnaires_path do %>
              <div class="card text-center">
                <h4>QUESTIONNAIRES</h4>
                <h2><%= Questionnaire.all.size %></h2>
              </div>
            <% end %>
          </div>
          <div class="col-md-4 col-sm-6">
            <%= link_to dimensions_path do %>
              <div class="card text-center">
                <h4>TOTAL DIMENSIONS</h4>
                <h2><%= Dimension.all.size %></h2>
              </div>
            <% end %>
          </div>
          <div class="col-md-4 col-sm-6">
            <%= link_to questions_path do %>
              <div class="card text-center">
                <h4>TOTAL QUESTIONS</h4>
                <h2><%= Question.all.size %></h2>
              </div>
            <% end %>
          </div>
          <div class="col-md-4 col-sm-6">
            <%= link_to variables_path do %>
              <div class="card text-center">
                <h4>TOTAL VARIABLES</h4>
                <h2><%= Variable.all.size %></h2>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%#= render "edit_intro_modal" %>