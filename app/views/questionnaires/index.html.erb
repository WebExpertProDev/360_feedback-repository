<div class="container container-admin">
  <div class="container">
    <div class="row mb-4 align-items-center">
      <div class="col-md-6 text-center text-md-left">
        <h5 class="mb-3 mb-md-0">Questionnaires</h5>
      </div>
      <div class="col-md-6 text-center text-md-right">
        <%= link_to 'New Questionnaire', new_questionnaire_path, class:"btn btn-primary" %>
      </div>
    </div>
  <div class="table-responsive table-users">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Intro Text</th>
          <th>Proiority</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @questionnaires.each do |questionnaire| %>
        <tr>
          <td><%= questionnaire.name %></td>
          <td><%= questionnaire.intro_text %></td>
          <td><%= questionnaire.priority %></td>
          <td class="action-links text-center"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, questionnaire %></td>
          <td class="action-links text-center"><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_questionnaire_path(questionnaire) %></td>
          <td class="action-links text-center"><%= link_to '<i class="fas fa-trash-alt text-danger"></i>'.html_safe, questionnaire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>